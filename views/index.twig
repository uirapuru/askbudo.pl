{% extends "layout.twig" %}

{% block content %}
<div class="container" id="columnMain">
    <div class="row-fluid">
        <div class="span10 offset1">
            <h1 style="font-size: 75px; color: #0087CA; font-weight: bold">AskBudo.pl</h1>

            <h2>Jeszcze chwila, lada moment!</h2>
            <p>
                Niedługo startujemy! Jeżeli chcesz być na bieżąco z nowościami oraz już teraz zarejestrować się,
                by z chwilą uruchomienia móc od razu korzystać z naszego serwisu, wypełnij i wyślij poniższy formularz.
            </p>
        </div>
    </div>

    <div class="row-fluid" id="registerDiv">
        <form action="/" method="POST" class="form form-horizontal span7 offset4 well-large" id="registerForm">
            {{ form_errors(form) }}
            {% if notification is not null %}
                <div class="alert alert-info">
                    {{ notification }}
                </div>
            {% endif %}
            {% if alert is not null %}
                <div class="alert alert-error">
                    {{ alert }}
                </div>
            {% endif %}
            <div class="control-group{% if not form.username.vars.valid %} error{% endif %}">
                <label class="control-label" for="inputEmail">Nazwa użytkownika</label>
                <div class="controls">
                    {{ form_widget(form.username) }}  
                    <div class="help-block">
                        {{ form_errors(form.username) }}
                    </div>
                </div>
            </div>
            <div class="control-group{% if not form.email.vars.valid %} error{% endif %}">
                <label class="control-label" for="inputEmail">Email</label>
                <div class="controls">
                    {{ form_widget(form.email) }}  
                    <div class="help-block">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="control-group{% if not form.password.vars.valid %} error{% endif %}">
                <label class="control-label" for="inputPassword">Password</label>
                <div class="controls">
                {{ form_widget(form.password) }}  
                    <div class="help-block">
                        {{ form_errors(form.password) }}
                    </div>
                </div>
            </div>
            <div class="control-group">
                {{ form_widget(form.send,{"attr" : { class: "pull-right btn btn-xlarge btn-success"}}) }}  
            </div>
        {{ form_rest(form) }}  
        </form>
    </div>
